@page
@model ConfirmationModel
@{
    ViewData["Title"] = "Contact";
}

@* purpose: to learn action result *@

<div class="container contact-container">
    <h1 class="mt-4 mb-3">
        Thank you!
        <small>It's always great to hear from you...</small>
    </h1>
    <hr />
    @if (!string.IsNullOrEmpty(Model.Message)) {
        <h1>@Model.Message</h1>
    }
    <br />
    <p>If you have any further questions, you can contact us 555-123-1234</p>
</div>
